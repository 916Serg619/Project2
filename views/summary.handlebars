{{!-- Event Info Card--}}
<div class="card" style="width: 33rem;">
  <div class="card-body">
    <h3 class="card-title">Event Info</h3>
    <table class="table table-striped">
      {{!-- Head --}}
      <thead>
        <tr>
          <th>Couple</th>
          <th>Event Date</th>
          <th>Venue</th>
          <th>Address</th>
          <th>City</th>
          <th>Food Option One</th>
          <th>Food Option Two</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      {{!-- Body --}}
      <tr>
        <td><textarea>{{event.couple}}</textarea></td>
        <td><textarea>{{event.venueName}}</textarea></td>
        <td><textarea>{{event.eventDate}}</textarea></td>
        <td><textarea>{{event.foodOptionOne}}</textarea></td>
        <td><textarea>{{event.foodOptionTwo}}</textarea></td>
        <td><button class="edit" id="edit{{event.id}}"><i class="far fa-edit" onclick="editEvent()"></i></button></td>
        <td><a style='cursor:pointer;color:red' data-Id = "{{event.id}}" class='delete-event' href="/members" data-control="userBtn">Delete</a></td>
      </tr>
    </table>
  </div>
</div>

{{!-- Vendor Info Card--}}
<div class="card" style="width: 33rem;">
  <div class="card-body">
    <h5 class="card-title">Vendor Info</h5>
    <table class="table table-striped">
      {{!-- Head --}}
      <thead>
        <tr>
          <th>Vendor Name</th>
          <th>Service</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      {{!-- Row populate --}}
      {{#each vendor}}
      <tr>
        <td><textarea>{{dataValues.vendorName}}</textarea></td>
        <td><textarea readonly>{{dataValues.service}}</textarea></td>
        <td><textarea readonly>{{dataValues.email}}</textarea></td>
        <td><textarea readonly>{{dataValues.phone}}</textarea></td>
        <td><a href="/vendorInfos/{{dataValues.eventInfoId}}">Edit</a></td>
        <td><a style='cursor:pointer;color:red' class='delete-event'>Delete</a></td>
        {{!-- test top --}}
        <a href="#" class="updown-arrow" onClick="callUserDetail()" data-control="userBtn"><i class="icon-arrow-big"></i></a>
        {{!-- test bottom --}}
      </tr>
      {{/each}}
    </table>
  </div>
</div>
<a href="/members" data-role="button">Main</a>
